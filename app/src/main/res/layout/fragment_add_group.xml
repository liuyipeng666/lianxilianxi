<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/title_beijing"
    tools:context=".fragment.AddGroupFragment">
    <include
        layout="@layout/item_sou"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/red"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/chuangjianqun"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="创建群"
            android:textSize="25dp"
            android:gravity="left|center"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="3dp"

        >
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/red"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/qun_mianduimian"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="扫码进群"
            android:textSize="25dp"
            android:gravity="left|center"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/qun_tab"
        android:layout_marginTop="15dp"
        app:tabIndicatorColor="@color/title_it_yellow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/qun_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>