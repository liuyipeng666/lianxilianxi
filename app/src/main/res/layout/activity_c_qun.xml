<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data class="CqunData">
        <variable
            name="reqData"
            type="com.example.dadadada.view.CQunActivity" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/title_color"
            >
            <ImageView
                android:id="@+id/image_fanhui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:src="@drawable/fanhui"
                />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="创建群"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:visibility="visible" />

            <Button
                android:onClick="@{()->reqData.onCreateQun(reqData.entity)}"
                android:id="@+id/title_text_baocun"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="保存"
                android:textColor="@color/white"
                android:background="@color/title_color"
                android:textSize="20dp"
                tools:visibility="visible" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/huodong_type"
            >
            <ImageView
                android:id="@+id/huodong_iamge"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/huodong"
                />
            <TextView
                android:id="@+id/huodong_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:text="交友"
                />

        </LinearLayout>
        <EditText
            android:text="@={reqData.entity.groupname}"
            android:hint="输入群名称"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
        <EditText
            android:text="@={reqData.entity.groupdesc}"
            android:hint="输入群简介"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <LinearLayout
            android:id="@+id/tianjia_chengyuan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/jia"
                />
            <TextView
                android:text="添加群成员"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chengyuan_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>

</layout>